# mouse
XF86Calculator
    killall onboard; onboard

# suspend
super + shift + Escape
    systemctl suspend

# reload configuration files:
super + Escape
    ~/scripts/reload-configs.sh

# change language
alt + space
    ~/scripts/switch-language.sh

# kill all ffmpeg
super + ctrl + shift + p
    killall ffmpeg

#
# launches
#

# start terminal emulator
super + Return
    alacritty

# start browser
super + shift + i
    brave

# start browser
super + control + n
    anytype

# start incognito browser
super + ctrl + shift + i
    brave --incognito

# open emoji picker
XF86Favorites
    $HOME/scripts/emoji-picker.sh

# open emoji picker
Cancel
    $HOME/scripts/nerdfont-symbol.sh

#
# media controls
#

# Toggle mute
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# Change volume
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}1%

# chunk Change volume
shift + XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%

# control brightness
XF86MonBrightness{Down,Up}
    brightnessctl set {1%-,+1%}

# chunk control brightness
shift + XF86MonBrightness{Down,Up}
    brightnessctl set {10%-,+10%}

# toggle mute microphone
ctrl + XF86Reload
    $HOME/scripts/toggle_microphone_mute.sh

# push to talk/mute
XF86Reload
    $HOME/scripts/alter_microphone_state.sh
@XF86Reload
    $HOME/scripts/return_microphone_state.sh

#
# media control
#

# play/pause
XF86AudioPlay
    playerctl play-pause

# previous
XF86AudioPrev
    playerctl previous

# next
XF86AudioNext
    playerctl next

#
# rofi
#

# launch an app
super + space
    rofi -show drun

# run command
super + shift + space
    rofi -show run

# swich windows
super + shift + Tab
    rofi -show window

# run rofi script
super + shift + s
    ~/scripts/main.sh

#
# dunst
#

# notification history
super + alt + n
    dunstctl history-pop

# close last notification
super + n
    dunstctl close

# close all notifications
super + shift + n
    dunstctl close-all

#
# ui elements hotkeys
#

# toggle always show/hide ui elements
super + b
    ~/scripts/toggle-force-show-hide-ui-elements.sh

# start show ui elements while pressing super
super + ctrl + b
    ~/scripts/dynamic-show-ui-elements.sh

# show ui elements while pressing super if dynamic
{Super_L,Super_R}
    ~/scripts/show-ui-elements.sh
@{Super_L,Super_R}
    ~/scripts/hide-ui-elements.sh


#
# bspwm hotkeys
#

# close and kill selected window
super + shift + {_,control + }w
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
    bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
    bspc node -t \~{tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + shift + {m,l,s,p}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{0-9, v, XF86AudioPlay, XF86Reload}
    bspc {desktop -f,node -d} '^{1-9, 10, 11, 12, 13}'

# select windows in parent space
super + r
    bspc node -f @parent

# select all windows in current screen
super + shift + r
    bspc node -f @/

# rotate selected windows
super + ctrl + {_,shift + }r
    bspc node -R {90,-90}

# rebalance selected windows ratio
super + equal
    bspc node -B

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# move window to last preselection
super + alt + ctrl + m
    bspc node -n 'last.!automatic.local'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + ctrl + alt + {h,j,k,l}
    bspc node -v {-20 0,0 20,0 -20,20 0}

#
# utility quick launch
#

# screen capture
super + shift + p
    ~/scripts/take-screenshots.sh

# diary
super + d
    ~/scripts/diary.sh

# sketchpad
super + shift + d
    ~/scripts/whiteboard.sh

